<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_900"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_later_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/blue_grey_900"
            app:expanded="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_later_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@color/blue_grey_900"
                app:layout_scrollFlags="enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/textView101"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Confirm "
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView102"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textView101"
                        android:background="@android:color/transparent"
                        android:text="your "
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/yellow_A700"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textView102"
                        android:background="@android:color/transparent"
                        android:text="Booking"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/subscripe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_later_car"
            android:background="@color/white"
            android:padding="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/vmini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/car_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/car_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_vertical"
                            android:text="Mini"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/seater"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/ic_seater"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="center_vertical|start"
                            android:text="4 Seater-Indica,Micra,Ritz" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_cash"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="center_vertical"
                            android:hint="Value For Money " />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/card_background"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:drawableLeft="@drawable/ic_ac"
                        android:fontFamily="@font/roboto_thin"
                        android:gravity="left|center_vertical"
                        android:hint="AC" />

                    <TextView
                        android:id="@+id/partners"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:drawableStart="@drawable/ic_partners"
                        android:fontFamily="@font/roboto_thin"
                        android:gravity="left|center_vertical"
                        android:hint="Top Rated Partners"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:drawableStart="@drawable/ic_wifi"
                        android:fontFamily="@font/roboto_thin"
                        android:gravity="left|center_vertical"
                        android:hint="Free Wi-Fi"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/input_from_address_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/com_facebook_auth_dialog_header_background"
                        android:drawableStart="@drawable/green_dot"
                        android:focusableInTouchMode="false"
                        android:hint="From"
                        android:inputType="textImeMultiLine|textNoSuggestions"
                        android:padding="5dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/input_to_address_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/com_facebook_auth_dialog_header_background"
                        android:drawableStart="@drawable/red_dot"
                        android:focusableInTouchMode="false"
                        android:hint="To"
                        android:inputType="textImeMultiLine|textNoSuggestions"
                        android:padding="5dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/card_background_selector"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Leave on"
                        android:textColor="@color/blue_grey_700" />

                    <TextView
                        android:id="@+id/lvon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical|end"
                        android:textColor="@color/blue_A400" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l22"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/card_background_selector"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Return by"
                        android:textColor="@color/blue_grey_700" />

                    <TextView
                        android:id="@+id/rtnon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical|end"
                        android:textColor="@color/blue_A400" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/text_days"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_thin"
                        android:gravity="center_horizontal|center"
                        android:text="round trip "
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/car_cost"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto_thin"
                                android:gravity="center_vertical|center_horizontal"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_cost"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical|center_horizontal"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_thin"
                                android:gravity="center_vertical|center_horizontal"
                                android:hint="Estimated fare "
                                android:textColor="@color/blue_grey_500"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical"
                            android:adjustViewBounds="true"
                            android:src="@drawable/price_match" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/fare_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="See Fare Details"
                        android:textColor="@color/blue_grey_600"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/price_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto_thin"
                                    android:gravity="left|center_vertical|center_horizontal"
                                    android:text="Distance Fare"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/total_km"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_thin"
                                    android:gravity="left|center_vertical|start"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/total_km_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical|center_horizontal"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto_thin"
                                    android:gravity="left|center_vertical|center_horizontal"
                                    android:text="Driver allowance"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/total_days"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_thin"
                                    android:gravity="left|center_vertical|start"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/total_days_driver"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical|center_horizontal"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_thin"
                                    android:gravity="left|center_vertical|center_horizontal"
                                    android:text="Taxes"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tax_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto_thin"
                                    android:gravity="left|center_vertical|center_horizontal"
                                    android:text="SGST"
                                    android:textSize="8sp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/total_taxes"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical|center_horizontal"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_weight="0.6"
                        android:background="@color/white"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:text="Estimated fare"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/total_fare"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_vertical|center_horizontal"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="20dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.7"
                            android:drawableStart="@drawable/green_dot"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:text="Exclude tolls,parking,permits and state tax"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="20dp"
                            android:drawableStart="@drawable/green_dot"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="center_vertical|center_horizontal|start"
                            android:text="Additional km fare upon exceeding 1000km-\u20B910/km"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.7"
                            android:drawableStart="@drawable/green_dot"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:text="Driver allowance upon exceeding 4 days-\u20B9200/day"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="20dp"
                            android:drawableStart="@drawable/green_dot"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="center_vertical|center_horizontal|start"
                            android:text="Minimum km charged per 24 hours-250km"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="20dp"
                            android:drawableStart="@drawable/green_dot"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="center_vertical|center_horizontal|start"
                            android:text="24-hr round trip fares will apply if time exceeds 24 hours"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/fare_cancellation"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.7"
                    android:background="@color/green_200"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Free cancellation till 07 March"
                    android:textColor="@color/green_A700"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/card_background"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/limo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_weight="0.6"
                        android:background="@color/white"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:drawableStart="@drawable/green_dot"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="center_vertical"
                            android:hint="Regularly audited cars" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:drawableStart="@drawable/green_dot"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="center_vertical|start"
                            android:hint="24x7 on-road assistance" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:drawableStart="@drawable/green_dot"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="center_vertical"
                            android:hint="Real time tracking " />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/blue_grey_900"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/personal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="0.5"
                            android:background="@android:drawable/screen_background_dark"
                            android:text="Personal"
                            android:textColor="@color/top" />

                        <Button
                            android:id="@+id/coupon_add"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/blue_grey_900"
                            android:text="Add coupon"
                            android:textColor="@color/top" />
                    </LinearLayout>


                    <Button
                        android:id="@+id/confirm_ri"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/pp3"
                        android:background="@color/blue_grey_900"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="Confirm &amp; Book"
                        android:textColor="@color/top"
                        android:textStyle="normal"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progressout"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.7"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
