<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choose_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/main"
    android:fillViewport="true"
    android:foregroundGravity="center_horizontal|center"
    android:scrollbarSize="0dp"
    android:visibility="visible">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/amu_bubble_shadow"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/whatsapps"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="0.14"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:padding="5dp"
            android:src="@mipmap/ic_whatsapp" />

        <ImageView
            android:id="@+id/messengers"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="0.14"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:padding="5dp"
            android:src="@mipmap/ic_messenger" />


        <ImageView
            android:id="@+id/emails"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="0.14"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:padding="5dp"
            android:src="@mipmap/ic_email" />

        <ImageView
            android:id="@+id/messages"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_weight="0.14"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:src="@mipmap/ic_message" />

        <ImageView
            android:id="@+id/faceboks"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="0.14"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:src="@mipmap/ic_facebook" />

    </LinearLayout>
</HorizontalScrollView>

