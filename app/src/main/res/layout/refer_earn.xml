<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_900"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_later_refer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/blue_grey_900"
            app:expanded="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_later_refer"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:background="@color/blue_grey_900"
                app:layout_scrollFlags="enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/textView101"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Invite "
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textView101"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Friends"
                        android:textColor="@color/yellow_A700"
                        android:textSize="18sp" />



                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/app_later_refer">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_thin"
                android:gravity="center_horizontal"
                android:text="Get your friends get a HelloCab"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/sos_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_later_sos"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:visibility="visible"
                app:srcCompat="@drawable/refer_earn_peeps" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sos_image"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:ems="12"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_thin"
                android:gravity="center_horizontal"
                android:hint="Share your referral code"
                android:inputType="textMultiLine|textNoSuggestions" />

            <EditText
                android:id="@+id/referalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_margin="10dp"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:ems="12"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:hint="Share your referral code"
                android:inputType="textMultiLine|textNoSuggestions"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_thin"
                android:text="Start inviting friends"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/amu_bubble_shadow"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/whatsapp"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="0.25"
                    android:adjustViewBounds="true"
                    android:contentDescription="TODO"
                    android:padding="5dp"
                    android:src="@mipmap/ic_whatsapp" />

                <ImageView
                    android:id="@+id/messenger"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="0.25"
                    android:adjustViewBounds="true"
                    android:contentDescription="TODO"
                    android:padding="5dp"
                    android:src="@mipmap/ic_messenger" />


                <ImageView
                    android:id="@+id/email"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="0.25"
                    android:adjustViewBounds="true"
                    android:contentDescription="TODO"
                    android:padding="5dp"
                    android:src="@mipmap/ic_email" />

                <ImageView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_weight="0.25"
                    android:adjustViewBounds="true"
                    android:contentDescription="TODO"
                    android:src="@mipmap/ic_message" />
            </LinearLayout>


        </LinearLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_thin"
                    android:text="Share with the world"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/buttonRefer"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/amu_bubble_shadow"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/twitter"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.33"
                        android:adjustViewBounds="false"
                        android:contentDescription="TODO"
                        android:src="@mipmap/ic_twitter" />


                    <ImageView
                        android:id="@+id/facebok"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.33"
                        android:adjustViewBounds="true"
                        android:contentDescription="TODO"
                        android:src="@mipmap/ic_facebook" />
                    <ImageView
                        android:id="@+id/gplus"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.33"
                        android:adjustViewBounds="true"
                        android:contentDescription="TODO"
                        android:src="@mipmap/ic_plus" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonRefer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp"
                    android:background="@color/blue_grey_900"
                    android:clickable="false"
                    android:fontFamily="@font/roboto_thin"
                    android:text="Invite friends"
                    android:textColor="@color/top"
                    android:textStyle="bold" />


        <ProgressBar
            android:id="@+id/progressBarRefer"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttonRefer"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginStart="253dp"
            android:layout_marginTop="77dp"
            android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>