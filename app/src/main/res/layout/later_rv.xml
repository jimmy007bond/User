<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_grey_900"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ride_date_later"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ride_time_later"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right|center_vertical"
                android:padding="5dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:paddingEnd="5dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/input_from_address"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/green_dot"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="From"
                        android:inputType="textImeMultiLine|textNoSuggestions"
                        android:padding="5dp"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/input_to_address"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/red_dot"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="To"
                        android:inputType="textImeMultiLine|textNoSuggestions"
                        android:padding="5dp"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ride_driver"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="0.2"
                    android:background="@android:color/transparent"
                    android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/ride_cost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="0.8"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto_thin"
                    android:text="cost"
                    android:textColor="@color/blue_grey_900" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/ride_later_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="top"
                android:layout_weight="0.5"
                android:background="@color/blue_grey_900"
                android:fontFamily="@font/roboto_thin"
                android:text="Cancel"
                android:textColor="@color/top" />

            <Button
                android:id="@+id/ride_later_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="top"
                android:layout_marginEnd="1dp"
                android:layout_weight="0.5"
                android:background="@color/top"
                android:fontFamily="@font/roboto_medium"
                android:text="Edit"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>