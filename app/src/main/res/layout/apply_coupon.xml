<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@android:drawable/picture_frame"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9">

        <TextView
            android:id="@+id/home_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:background="@color/deep_orange_600"
            android:drawableStart="@mipmap/ic_coupon"
            android:fontFamily="@font/roboto_thin"
            android:gravity="center"
            android:text="Apply Coupon"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/app_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_add"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:hint="Coupon id"
            android:focusableInTouchMode="false"
            android:inputType="textPersonName" />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_coupon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Available coupons" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/promoRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/promoRv"
            android:layout_weight="0.9">

            <Button
                android:id="@+id/home_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_toLeftOf="@+id/home_save"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:text="CANCEL"
                android:textColor="@color/com_facebook_blue" />

            <Button
                android:id="@+id/home_sav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:text="OK"
                android:textColor="@color/com_facebook_blue" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>

